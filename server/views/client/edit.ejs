<% include ../partials/header.ejs%>
<% include ../partials/main_nav.ejs%>

<div class="container">
    <div class="row">
        <div class="offsed-md-2 col-md-8">

        <h1> <%= title %> </h1>

            <form class="form" method="POST"> 
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the name of the Client"
                    name="name" 
                    value="<%= client.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="number">Number</label>
                    <input type="number" class="form-control"
                    id="numberTextField"
                    placeholder="Enter the number of the Client"
                    name="number" 
                    value="<%= client.number %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="emailEmailField">Email</label>
                    <input type="email" class="form-control"
                    id="emailEmailField"
                    placeholder="Enter the email of the Client"
                    name="email" 
                      value="<%= client.email %>"
                    required>
                </div>

                <br>
                
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit 
                </button>

                <a href="/client-list" class="btn btn-warning"><i class="fas fa-undo"></i> Cancel </a>
            </form>
        </div>
    </div>
</div>

<% include ../partials/bottom_nav.ejs%>
<% include ../partials/footer.ejs%>